        scales:{y:{min:0,max:5,ticks:{stepSize:1}}}
      }
    });

    // æ¨ç§»æŠ˜ã‚Œç·š
    const trendCanvas=document.createElement("canvas");
    submissionCanvas.parentElement.appendChild(trendCanvas);
    new Chart(trendCanvas.getContext("2d"),{
